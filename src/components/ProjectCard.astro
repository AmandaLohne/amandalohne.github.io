---
interface Props {
    title: string;
    href: string;
    imgSrc?: string;
    imgAlt?: string;
    excerpt?: string;
}
const { title, href, imgSrc, imgAlt = "", excerpt } = Astro.props;
---

<a class="card" href={href}>
    {
        imgSrc && (
            <div class="thumb">
                <img src={imgSrc} alt={imgAlt} loading="lazy" />
            </div>
        )
    }
    <div class="meta">
        <h3>{title}</h3>
        {excerpt && <p>{excerpt}</p>}
    </div>
</a>

<style>
    .card {
        display: grid;
        grid-template-rows: auto 1fr;
        gap: 0.75rem;
        text-decoration: none;
        /* border: 1px solid #e5e5e5; */
        border-radius: 1em;
        overflow: hidden;
        /* background: #fff; */
        transition:
            transform 120ms ease,
            box-shadow 120ms ease;
    }
    .card:hover {
        transform: translateY(-2px);
        /* box-shadow: 0 6px 22px rgba(0, 0, 0, 0.08); */
    }

    .thumb {
        aspect-ratio: 9/10;
        overflow: hidden;
        border-radius: 1em;
    }
    .thumb img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
    }

    .meta {
        padding: 0 1rem 1rem;
    }
    .meta h3 {
        margin: 0.25rem 0 0.25rem;
        color: #111;
        font-size: 1.05rem;
    }
    .meta p {
        margin: 0;
        color: #555;
        font-size: 0.95rem;
        line-height: 1.35;
    }
</style>
